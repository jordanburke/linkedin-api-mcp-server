# ===== REQUIRED =====
# Server won't start without these
LINKEDIN_CLIENT_ID=your_client_id_here
LINKEDIN_CLIENT_SECRET=your_client_secret_here

# ===== REQUIRED FOR API FUNCTIONALITY =====
# Server starts but API calls will fail without this
LINKEDIN_ACCESS_TOKEN=

# ===== RECOMMENDED =====
# Enables automatic token refresh (prevents expiration after ~60 min)
LINKEDIN_REFRESH_TOKEN=

# ===== OPTIONAL - Has sensible defaults =====
# OAuth Redirect URI (only needed for OAuth flow, not for Docker usage)
LINKEDIN_REDIRECT_URI=http://localhost:3000/callback

# User Agent (defaults to "LinkedInMCPServer/1.0.0")
LINKEDIN_USER_AGENT=LinkedInMCPServer/1.0.0

# HTTP Server Configuration (defaults: http, 3000, 0.0.0.0)
TRANSPORT_TYPE=http
PORT=3000
HOST=0.0.0.0

# OAuth Protection for HTTP Server (defaults: disabled)
OAUTH_ENABLED=false
OAUTH_TOKEN=
