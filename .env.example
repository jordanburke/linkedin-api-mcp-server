# LinkedIn API Credentials (Required)
LINKEDIN_CLIENT_ID=your_client_id_here
LINKEDIN_CLIENT_SECRET=your_client_secret_here

# OAuth Redirect URI (for 3-legged OAuth flow)
LINKEDIN_REDIRECT_URI=http://localhost:3000/callback

# User Access Token (Optional - can be generated via OAuth flow)
LINKEDIN_ACCESS_TOKEN=
LINKEDIN_REFRESH_TOKEN=

# User Agent (Optional)
LINKEDIN_USER_AGENT=LinkedInMCPServer/1.0.0

# HTTP Server Configuration (Optional)
PORT=3000
HOST=0.0.0.0
TRANSPORT_TYPE=http

# OAuth Protection for HTTP Server (Optional)
OAUTH_ENABLED=false
OAUTH_TOKEN=
