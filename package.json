{
  "name": "linkedin-api-mcp-server",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server that provides tools for interacting with LinkedIn API, including personal profiles, company pages, and content management.",
  "keywords": [
    "mcp",
    "linkedin",
    "api",
    "model-context-protocol",
    "linkedin-api",
    "company-api",
    "marketing-api"
  ],
  "author": "Jordan Burke <jordan.burke@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/jordanburke/linkedin-api-mcp-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/jordanburke/linkedin-api-mcp-server"
  },
  "bin": {
    "linkedin-api-mcp-server": "dist/bin.js"
  },
  "mcpName": "io.github.jordanburke.linkedin-api-mcp-server",
  "scripts": {
    "validate": "pnpm format && pnpm lint && pnpm test && pnpm build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint ./src --fix",
    "lint:check": "eslint ./src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "build": "rimraf dist && cross-env NODE_ENV=production tsup",
    "build:watch": "tsup --watch",
    "dev": "tsup --watch",
    "prepublishOnly": "pnpm validate",
    "ts-types": "tsc",
    "inspect": "pnpm build && npx @modelcontextprotocol/inspector dist/index.js",
    "start": "pnpm build && npx linkedin-api-mcp-server",
    "serve": "pnpm build && node dist/index.js",
    "serve:dev": "tsx watch src/index.ts"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@types/node": "^22.18.10",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "cross-env": "^10.1.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "dotenv": "^16.6.1",
    "fastmcp": "^3.19.1",
    "zod": "^4.1.12"
  },
  "packageManager": "pnpm@10.18.2+sha512.9fb969fa749b3ade6035e0f109f0b8a60b5d08a1a87fdf72e337da90dcc93336e2280ca4e44f2358a649b83c17959e9993e777c2080879f3801e6f0d999ad3dd"
}
